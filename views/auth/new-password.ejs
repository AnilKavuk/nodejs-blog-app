<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>

  <body>
    <%- include("../partials/nav") %>
    <div class="container mt-3">
      <form method="post" action="/account/new-password">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
        <input type="hidden" name="userId" value="<%=userId%>" />
        <input type="hidden" name="token" value="<%=token%>" />
        <div class="row my-5 gx-5">
          <div class="col-sm-10">
            <% if (typeof message !='undefined') { %>
            <div class="alert alert-<%=message.class %> px-5">
              <%= message.text %>
            </div>
            <% } %>
          </div>
          <div class="col-md-10">
            <div class="row mb-3">
              <label for="password" class="col-sm-1 col-form-label">
                Password
              </label>
              <div class="col-sm-10">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password" />
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-10 offset-sm-1">
                <button type="submit" class="btn btn-primary">
                  Update Password
                </button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
    <script>
      const hidden = () => {
        let alerts = document.querySelector(".alert");
        alerts.classList.add("d-none");
      };
      let myTimeout = setTimeout(hidden, 5000);
    </script>
  </body>
</html>
