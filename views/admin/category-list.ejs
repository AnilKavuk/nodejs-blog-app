<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>

  <body>
    <%- include("../partials/nav") %>
    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <% if (action!=undefined && action=="category-edit" &&
          categoryUrl!=undefined) { %>
          <div class="alert alert-success">
            Updated the linked blog page named "<%=categoryUrl%>"
          </div>
          <% } %> <% if (action!=undefined && action=="category-create") { %>
          <div class="alert alert-success">Category created</div>
          <% } %> <% if (action!=undefined && action=="category-delete") { %>
          <div class="alert alert-danger">Category deleted</div>
          <% } %>

          <script>
            const hidden = () => {
              let alerts = document.querySelector(".alert");
              alerts.classList.add("d-none");
            };
            let myTimeout = setTimeout(hidden, 5000);
          </script>

          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th style="width: 50px; text-align: center">id</th>
                <th>name</th>
                <th style="width: 130px"></th>
              </tr>
            </thead>
            <% categories.forEach(category => { %>
            <tr>
              <td>
                <div class="d-flex justify-content-center align-items-center">
                  #<%= category.dataValues.id %>
                </div>
              </td>
              <td>
                <div class="d-flex"><%= category.dataValues.name %></div>
              </td>
              <td>
                <div class="d-flex justify-content-center align-items-center">
                  <a
                    class="btn btn-sm btn-primary"
                    style="margin-right: 10px"
                    href="/admin/category/edit/<%= category.dataValues.url %>">
                    edit
                  </a>
                  <a
                    class="btn btn-sm btn-danger"
                    href="/admin/category/delete/<%= category.dataValues.url %>">
                    delete
                  </a>
                </div>
              </td>
            </tr>
            <% }) %>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
