<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <%- include("../partials/nav") %>
  <div class="container mt-3">
    <div class="row">
      <div class="col-md-12 mt-3">
        <form method="post">
          <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
          <input type="hidden" name="userId" value="<%= user.id %>" />
          <div class="d-flex justify-content-center align-items-center mb-3">
            <label for="fullName" class="col-sm-2 col-form-label">
              <strong class="fs-4">Name</strong>
            </label>
          </div>
          <div class="d-flex justify-content-center align-items-center mb-3">
            <div class="col-sm-4">
              <input type="text" class="form-control" id="fullName" name="fullName" value="<%= user.fullName %>" />
            </div>
          </div>
          <div class="d-flex justify-content-center align-items-center mb-3">
            <label for="fullName" class="col-sm-2 col-form-label">
              <strong class="fs-4">email</strong>
            </label>
          </div>
          <div class="d-flex justify-content-center align-items-center mb-3">
            <div class="col-sm-4">
              <input type="text" class="form-control" id="email" name="email" value="<%= user.email %>" />
            </div>
          </div>
          <div class="d-flex justify-content-center align-items-center mb-3">
            <label for="Roles" class="col-sm-2 col-form-label">
              <strong class="fs-4">Roles</strong>
            </label>
          </div>
          <div class="row d-flex justify-content-center align-items-center mb-3">
            <div class="col-sm-4">
              <% roles.forEach(role => { %>
              <div class="form-check">
                <input type="checkbox" name="roles[]" id="role_<%=role.id  %>" class="form-check-input" value="<%= role.id %>" <%= user.roles.some(rol=>rol.id==role.id) ? "checked":"" %>>
                <label for="role_<%=  role.id%>"><%= role.roleName %></label>
              </div>
              <% }) %>
            </div>
            <div class="d-flex justify-content-center align-items-center mb-3">
              <div>
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </div>
        </form>
      </div>
    </div>
  </div>
</body>

</html>