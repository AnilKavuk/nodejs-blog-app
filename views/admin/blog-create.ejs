<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>

  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <form method="post" enctype="multipart/form-data">
        <div class="row my-5 gx-5">
          <div class="col-md-10">
            <div class="row mb-3">
              <label for="title" class="col-sm-1 col-form-label"> Title </label>
              <div class="col-sm-11">
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="title" />
              </div>
            </div>
            <div class="row mb-3">
              <label for="subTitle" class="col-sm-1 col-form-label">
                Subtitle
              </label>
              <div class="col-sm-11">
                <textarea
                  name="subTitle"
                  class="form-control"
                  rows="5"></textarea>
              </div>
            </div>
            <div class="row mb-3">
              <label for="title" class="col-sm-1 col-form-label"> Url </label>
              <div class="col-sm-11">
                <input type="text" class="form-control" id="url" name="url" />
              </div>
            </div>
            <div class="row mb-3">
              <label for="description" class="col-sm-1 col-form-label">
                Description
              </label>
              <div class="col-sm-11">
                <textarea
                  id="editor"
                  name="description"
                  class="form-control"
                  rows="10"></textarea>
              </div>
            </div>
            <div class="row mb-3">
              <label for="image" class="col-sm-1 col-form-label"> Image </label>
              <div class="col-sm-11">
                <input
                  class="form-control"
                  type="file"
                  id="Image"
                  name="image" />
              </div>
            </div>
            <div class="row mb-3"></div>
            <div class="row mb-3">
              <div class="col-sm-11 offset-sm-1">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </div>
          </div>
          <div class="col-md-2">
            <div class="row">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="homepage"
                  name="homepage" />
                <label class="form-check-label" for="homepage">
                  Home Page
                </label>
              </div>
            </div>
            <div class="row mb-3">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="approval"
                  name="approval" />
                <label class="form-check-label" for="approval">
                  Approval
                </label>
              </div>
            </div>
            <div class="row border-top pt-3">
              <% categories.forEach(category=> { %>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="category_<%=
                category.id %>"
                  name="categories[]"
                  value="<%= category.id %>" />
                <label
                  class="form-check-label"
                  for="category_<%= category.id %>">
                  <%= category.name %>
                </label>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      </form>
      <script src="https://cdn.ckeditor.com/ckeditor5/38.1.1/classic/ckeditor.js"></script>
      <script>
        ClassicEditor.create(document.querySelector("#editor")).catch(
          (error) => {
            console.error(error);
          }
        );
      </script>
    </div>
  </body>
</html>
